{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "build/dist",
    "module": "commonjs",
    "target": "es6",
    "lib": ["es2017", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "plugins": [{ "name": "tslint-language-service" }],
    "paths": {
      "@dapps/*": ["./node_modules/decentraland-dapps/dist/*"],
      "components/*": ["./src/components/*"],
      "lib/*": ["./src/lib/*"],
      "modules/*": ["./src/modules/*"],
      "themes/*": ["./src/themes/*"],
      "reducer": ["./src/reducer"],
      "types": ["./src/types"],
      "store": ["./src/store"],
      "locations": ["./src/locations"],
      "contracts": ["./src/contracts"],
      "translations": ["./src/translations"]
    }
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ]
}
